<div class="subscribe">
  <h2>Get access to <em>almost</em> all of our business hacks.</h2>

  <div class="container">
    <%= form_tag subscriptions_path do %>
      <div class="inline-form">
        <%= text_field_tag :email, '', placeholder: 'Enter your e-mail address' %>
        <%= submit_tag 'Subscribe', class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
</div>
